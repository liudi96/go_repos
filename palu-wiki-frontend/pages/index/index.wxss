/**index.wxss**/
.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx; /* Adjusted padding */
  box-sizing: border-box;
  background-color: #f8f8f8; /* 更柔和的背景色 */
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #666; /* 调整字体颜色 */
  margin-bottom: 20rpx;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.usermotto {
  margin-top: 20rpx; /* Adjusted margin */
  font-size: 32rpx;
  color: #444; /* 调整字体颜色 */
}

.chat-container {
  flex: 1; /* Take available space */
  width: 100%;
  display: flex;
  flex-direction: column;
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08); /* 更精致的阴影 */
  margin-top: 20rpx;
  overflow: hidden; /* Ensure content stays within bounds */
}

.message-list {
  flex: 1; /* Take available space */
  padding: 20rpx;
  box-sizing: border-box;
}

.message {
  display: flex;
  margin-bottom: 15rpx;
  max-width: 80%;
}

.message text {
  padding: 15rpx 25rpx;
  border-radius: 20rpx;
  line-height: 1.5;
  word-break: break-word;
}
 

.message.user {
  justify-content: flex-end;
  margin-left: auto;
}

.message.user text {
  background-color: #007bff;
  color: #fff;
  border-radius: 20rpx;
}

.message.ai {
  justify-content: flex-start;
  margin-right: auto;
}

.message.ai text {
  background-color: #e2e2e2;
  color: #333;
  border-radius: 20rpx;
}

.input-area {
  display: flex;
  padding: 20rpx;
  border-top: 1rpx solid #eee;
  background-color: #fff;
}

.input-box {
  flex: 1;
  min-height: 80rpx;
  max-height: 200rpx; /* 限制最大高度，防止过高 */
  border: 1rpx solid #ddd;
  border-radius: 40rpx;
  padding: 10rpx 30rpx; /* 调整内边距 */
  font-size: 30rpx;
  margin-right: 20rpx;
}

.send-button {
  background-color: #007bff;
  color: #fff;
  border-radius: 40rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 32rpx;
  padding: 0 30rpx; /* 调整内边距 */
}

.send-button::after {
  border: none;
}

/* 新增 section-card 样式 */
.section-card {
  width: 90%; /* 调整宽度 */
  padding: 40rpx; /* 增大内边距 */
  margin-bottom: 40rpx; /* 增大底部外边距 */
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
}

.section-title {
  font-size: 40rpx; /* 增大标题字体 */
  font-weight: bold;
  margin-bottom: 10rpx;
  color: #333;
}

.section-description {
  font-size: 28rpx; /* 增大描述字体 */
  color: #666;
}