/* pages/chat/chat.wxss */
.chat-page {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f5f5f5;
}

.message-list {
  flex: 1;
  padding: 20rpx;
  box-sizing: border-box;
}

.message {
  display: flex;
  margin-bottom: 20rpx;
}

.message text {
  padding: 15rpx 25rpx;
  border-radius: 20rpx;
  max-width: 70%;
  word-wrap: break-word;
  font-size: 30rpx;
  line-height: 1.5;
}

.message.user {
  justify-content: flex-end;
}

.message.user text {
  background-color: #dcf8c6;
  color: #333;
  border-bottom-right-radius: 5rpx;
}

.message.ai {
  justify-content: flex-start;
}

.message.ai text {
  background-color: #fff;
  color: #333;
  border: 1rpx solid #eee;
  border-bottom-left-radius: 5rpx;
}

.input-area {
  display: flex;
  padding: 20rpx;
  border-top: 1rpx solid #eee;
  background-color: #fff;
  align-items: flex-end;
}

.input-box {
  flex: 1;
  min-height: 80rpx;
  max-height: 200rpx; /* 限制最大高度，防止过高 */
  padding: 15rpx 20rpx;
  border: 1rpx solid #eee;
  border-radius: 40rpx;
  font-size: 30rpx;
  box-sizing: border-box;
  margin-right: 20rpx;
  line-height: 1.5;
}

.send-button {
  width: 120rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  background-color: #007bff;
  color: #fff;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
  margin: 0;
}

.send-button::after {
  border: none;
}